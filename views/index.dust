	<meta http-equiv="X-UA-Compatible" content="IE=edge"/>
	<title>우리 언제 만나</title>
	<link rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.min.css"/>
	<link rel="stylesheet" href="/dist/whenwemeet.css"/>
</head>
<body style="height: 100%;">
	<div id="whenwemeet" style="height: 100%">
		<div id="view" style="height: 100%">
			<div id="logo" style="text-align:center; height:100%;">
				<svg viewbox="0 0 168 300" style="position: relative; top: 50%; transform: translateY(-50%); margin: 0 auto; width: 84px; height: 150px; display: inline-block;">
					<polygon points="5,100 105,100 55,13.4" style="-webkit-filter:drop-shadow(5px 5px 3px #ccc);filter:drop-shadow(5px 5px 3px #ccc);fill:yellow"/>
					<polygon points="0,110 100,110 50,196.6" style="-webkit-filter:drop-shadow(5px 5px 3px #ccc);filter:drop-shadow(5px 5px 3px #ccc);fill:cyan"/>
					<polygon points="60,200 160,200 110,113.4" style="-webkit-filter:drop-shadow(5px 5px 3px #ccc);filter:drop-shadow(5px 5px 3px #ccc);fill:magenta"/>
					<polygon points="55,210 155,210 105,296.6" style="-webkit-filter:drop-shadow(5px 5px 3px #ccc);filter:drop-shadow(5px 5px 3px #ccc);fill:greenyellow"/>
				</svg>
			</div>
		</div>
		<div id="modal"></div>
	</div>
