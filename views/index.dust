	<script type="text/html" id="wwm-confirm">
		<header id="confirm-header">결과</header>
		<main id="confirm-main">
			<div id="result"></div>
			<div id="result-to-sns">
				결과 보내기
				<div id="result-to-kakao"><img src="/kakaolink_btn_medium.png"/></div>
				<div id="result-to-fb"><img src=""/>페북</div>
			</div>
		</main>
		<footer id="confirm-footer">
			<button id="to-lobby">로비</button>
			<button id="to-room">방으로</button>
		</footer>
	</script>
	<script type="text/html" id="wwm-member-list">
		<li data-id="{~lb}id{~rb}">
			<span class="offline"><i class="fa fa-circle"></i></span>
			&nbsp;
			<span class="{~lb}color{~rb}-text">{~lb}name{~rb}</span>
			&nbsp;
			<span class="chat"></span>
		</li>
	</script>
